<div class='form-group'>
<h1>Edit task</h1>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
   <% if @task.new_record? %>
    <%= f.submit %>
    <% else %>
  <%= f.check_box :completed %>completed
  <p><%= f.submit %></p>
  <% end %>

<% end %>
</div>
