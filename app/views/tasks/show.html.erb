<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>This task is <strong><%= @task.completed ? "completed!" : "still to be done."  %></strong></p>
<p></i><%= link_to "Edit this task", edit_task_path %>
  <p></i><%= link_to "Delete", delete_task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
<p><%= link_to "Back to list", tasks_path %></p>
